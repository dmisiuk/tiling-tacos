#!/usr/bin/env sh

# Conservative yabai configuration for macOS
# Minimal settings that don't conflict with macOS features
# Focus on tiling without breaking system functionality

# global settings - conservative approach
yabai -m config \
    external_bar                 off:0:0         \
    menubar_opacity              1.0             \
    mouse_follows_focus          off             \
    focus_follows_mouse          off             \
    display_arrangement_order    default         \
    window_origin_display        default         \
    window_placement             second_child    \
    window_insertion_point       focused         \
    window_zoom_persist          on              \
    window_shadow                on              \
    window_animation_duration    0.25            \
    window_animation_easing      ease_out_circ   \
    window_opacity_duration      0.0             \
    active_window_opacity        1.0             \
    normal_window_opacity        1.0             \
    window_opacity               off             \
    insert_feedback_color        0xff9dd274      \
    active_window_border_color   0xff775759      \
    normal_window_border_color   0xff555555      \
    window_border_width          1               \
    window_border_radius         -1.0            \
    window_border_blur           off             \
    window_border_hidpi          on              \
    window_border                off             \
    split_ratio                  0.50            \
    split_type                   auto            \
    auto_balance                 off             \
    top_padding                  5               \
    bottom_padding               5               \
    left_padding                 5               \
    right_padding                5               \
    window_gap                   5               \
    layout                       bsp             \
    mouse_modifier               fn              \
    mouse_action1                move            \
    mouse_action2                resize          \
    mouse_drop_action            swap

# Simple app rules - avoid conflicts with macOS
# Only exclude problematic system apps, let everything else tile naturally

# System apps that should never be tiled
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Disk Utility$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Console$" manage=off

# Utility apps that should float
yabai -m rule --add app="^Alfred$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^1Password" manage=off
yabai -m rule --add app="^Preview$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off

# Small utility windows
yabai -m rule --add app="^Digital Color Meter$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Keychain Access$" manage=off
yabai -m rule --add app="^Font Book$" manage=off
yabai -m rule --add app="^ColorSync Utility$" manage=off
yabai -m rule --add app="^Karabiner" manage=off
yabai -m rule --add app="^CleanMyMac" manage=off
yabai -m rule --add app="^gg$" manage=off

# Messaging apps - typically want floating
# yabai -m rule --add app="^Telegram$" manage=off
yabai -m rule --add app="^Discord$" manage=off
yabai -m rule --add app="^Slack$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^WhatsApp$" manage=off
yabai -m rule --add app="^Zoom$" manage=off
yabai -m rule --add app="^FaceTime$" manage=off
yabai -m rule --add app="^Skype$" manage=off

# JetBrains dialogs
yabai -m rule --add app="^jetbrains-" title="^$" manage=off
yabai -m rule --add app="^jetbrains-" title="splash" manage=off

echo "yabai development configuration loaded.."
